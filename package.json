{
  "name": "react-mobile-components-template",
  "version": "0.0.1",
  "description": "基于 React 的移动端UI库",
  "keywords": [
    "react",
    "react-ui",
    "react-component",
    "component",
    "components",
    "ui",
    "framework",
    "frontend",
    "mobile"
  ],
  "module": "es/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "dev": "zarm dev",
    "build:es": "rimraf es && tsc --outDir es -d --emitDeclarationOnly && zarm build --mode es --path components --out-dir es --copy-files --build-css",
    "build:lib": "rimraf lib && tsc --outDir lib -d --emitDeclarationOnly && zarm build --mode lib --path components --out-dir lib --copy-files --build-css",
    "build:umd": "rimraf dist && zarm build --mode umd --path components/style/entry.tsx,components/index.tsx --out-dir dist && zarm build --mode umd-ugly --path components/style/entry.tsx,components/index.tsx --out-dir dist",
    "build": "npm run build:lib && npm run build:es && npm run build:umd",
    "lint:ts": "eslint --ext .ts,.tsx components",
    "lint:js": "eslint --ext .js,.jsx components site rnkit/pages",
    "lint:style": "stylelint \"components/**/*.scss\" \"site/**/*.scss\" --syntax scss",
    "lint": "npm run lint:ts && npm run lint:js && npm run lint:style",
    "test:h5": "zarm test -s scripts/jest/setup.js",
    "test": "rimraf coverage && npm run test:h5 -- -c && cp ./coverage/coverage-final.json ./coverage/coverage-h5-final.json",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "authors": "git log --format='%aN <%aE>' | sort -u | grep -v 'users.noreply.github.com' > AUTHORS",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "bash scripts/release.sh",
    "prettier": "prettier -c --write '**/*'",
    "pretty-quick": "pretty-quick",
    "bundlesize": "bundlesize"
  },
  "peerDependencies": {
    "react": ">=16.3.1",
    "react-dom": ">=16.3.1"
  },
  "dependencies": {
    "zarm-web": "0.0.1-alpha.10",
    "classnames": "2.2.6",
    "color": "^3.1.0",
    "hoist-non-react-statics": "^3.3.0",
    "lodash": "^4.17.15",
    "normalize.css": "8.0.1",
    "popper.js": "^1.15.0",
    "raf": "^3.4.1",
    "react-native-camera-roll-picker": "1.2.3"
  },
  "devDependencies": {
    "@babel/standalone": "^7.0.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@sentry/browser": "^5.6.1",
    "@testing-library/react": "^11.2.3",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.11",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.9.0",
    "@types/react-native": "^0.60.7",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "@zarm-design/cli": "^0.0.34",
    "babel-eslint": "10.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-prismjs": "^2.0.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "browserslist": "^4.6.6",
    "bundlesize": "^0.18.1",
    "change-case": "^4.1.1",
    "concurrently": "^5.2.0",
    "conventional-changelog-cli": "^2.0.34",
    "core-js": "^3.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "dl-react-native-mock-render": "^0.1.10",
    "docsearch.js": "^2.6.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "7.10.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-za": "2.2.2",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-vue": "7.1.0",
    "gh-pages": "^2.2.0",
    "history": "^4.7.2",
    "husky": "^4.2.5",
    "is-wsl": "^2.1.0",
    "istanbul-api": "^3.0.0",
    "marked": "^2.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "prismjs": "^1.23.0",
    "prop-types": "^15.6.2",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-hot-loader": "^4.13.0",
    "react-intl": "^5.12.1",
    "react-loadable": "^5.5.0",
    "react-native": "^0.63.4",
    "react-navigation": "^4.0.3",
    "react-router-dom": "^5.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "13.8.0",
    "stylelint-checkstyle-formatter": "0.1.2",
    "stylelint-config-za": "0.3.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "4.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 9",
    "iOS >= 7",
    "Android >= 4"
  ],
  "sideEffects": [
    "dist/*",
    "components/style/*",
    "components/**/style/*",
    "es/**/style/*",
    "lib/**/style/*",
    "site/**/**.scss"
  ],
  "bundlesize": [
    {
      "path": "./dist/zarm.min.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./dist/zarm.min.css",
      "maxSize": "30 kB"
    }
  ]
}
